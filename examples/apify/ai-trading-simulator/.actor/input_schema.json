{
  "title": "AI Trading Simulator Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "mode": {
      "title": "Simulation Mode",
      "type": "string",
      "description": "Select the operating mode for the simulator",
      "enum": ["simulate", "backtest", "train", "stream"],
      "enumTitles": [
        "Simulate - Generate realistic market data",
        "Backtest - Test trading strategies with metrics",
        "Train - Generate ML/AI training datasets",
        "Stream - Real-time simulation mode"
      ],
      "default": "simulate",
      "editor": "select",
      "sectionCaption": "Basic Settings",
      "sectionDescription": "Configure the core simulation parameters"
    },
    "symbol": {
      "title": "Trading Symbol",
      "type": "string",
      "description": "Stock, crypto, or forex symbol (e.g., AAPL, BTC-USD, EUR/USD)",
      "default": "AAPL",
      "prefill": "TSLA",
      "editor": "textfield"
    },
    "timeframe": {
      "title": "Timeframe",
      "type": "string",
      "description": "Candlestick interval for OHLCV data",
      "enum": ["1m", "5m", "15m", "1h", "4h", "1d"],
      "enumTitles": [
        "1 Minute - Scalping/HFT",
        "5 Minutes - Day trading",
        "15 Minutes - Intraday",
        "1 Hour - Swing trading",
        "4 Hours - Position trading",
        "1 Day - Long-term analysis"
      ],
      "default": "1h",
      "editor": "select",
      "sectionCaption": "Data Configuration",
      "sectionDescription": "Set data volume and timeframe"
    },
    "dataPoints": {
      "title": "Number of Data Points",
      "type": "integer",
      "description": "Number of OHLCV candles to generate",
      "default": 1000,
      "minimum": 10,
      "maximum": 100000,
      "unit": "candles",
      "editor": "number"
    },
    "volatility": {
      "title": "Volatility",
      "type": "number",
      "description": "Market volatility factor - higher values create more dramatic price swings",
      "default": 0.05,
      "minimum": 0.01,
      "maximum": 0.5,
      "editor": "number",
      "sectionCaption": "Market Parameters",
      "sectionDescription": "Control market behavior and trends"
    },
    "trend": {
      "title": "Market Trend",
      "type": "string",
      "description": "Overall market direction bias",
      "enum": ["bullish", "bearish", "sideways", "volatile"],
      "enumTitles": [
        "üìà Bullish - Strong upward trend",
        "üìâ Bearish - Downward trend",
        "‚ÜîÔ∏è Sideways - Range-bound market",
        "üîÑ Volatile - High fluctuation, no clear direction"
      ],
      "default": "sideways",
      "editor": "select"
    },
    "strategy": {
      "title": "Trading Strategy",
      "type": "string",
      "description": "Strategy to backtest (only used in backtest mode)",
      "enum": ["mean_reversion", "momentum", "breakout", "ml_neural"],
      "enumTitles": [
        "Mean Reversion - Buy oversold, sell overbought",
        "Momentum - Follow the trend direction",
        "Breakout - Trade support/resistance breaks",
        "ML Neural - AI-based decision making"
      ],
      "default": "momentum",
      "editor": "select",
      "sectionCaption": "Strategy & Indicators",
      "sectionDescription": "Configure backtesting strategy and technical analysis"
    },
    "includeIndicators": {
      "title": "Include Technical Indicators",
      "type": "boolean",
      "description": "Calculate SMA, EMA, RSI, MACD, Bollinger Bands for each candle",
      "default": true,
      "editor": "checkbox"
    },
    "includeOrderBook": {
      "title": "Include Order Book Data",
      "type": "boolean",
      "description": "Generate Level 2 order book with bids/asks (increases output size)",
      "default": false,
      "editor": "checkbox",
      "sectionCaption": "Additional Data Types",
      "sectionDescription": "Enable extra data generation"
    },
    "includeNews": {
      "title": "Include News & Sentiment",
      "type": "boolean",
      "description": "Generate synthetic market news with sentiment scores",
      "default": false,
      "editor": "checkbox"
    },
    "outputFormat": {
      "title": "Output Format",
      "type": "string",
      "description": "Data export format for the dataset",
      "enum": ["json", "csv", "parquet"],
      "enumTitles": [
        "JSON - Human-readable, API-friendly",
        "CSV - Spreadsheet compatible, Excel/Pandas",
        "Parquet - Columnar format, ML-optimized"
      ],
      "default": "json",
      "editor": "select",
      "sectionCaption": "Output Settings",
      "sectionDescription": "Configure data export format"
    },
    "initialPrice": {
      "title": "Initial Price",
      "type": "number",
      "description": "Starting price for simulation. Leave empty to auto-detect based on symbol.",
      "minimum": 0.01,
      "editor": "number",
      "nullable": true,
      "sectionCaption": "Advanced Options",
      "sectionDescription": "Fine-tune simulation parameters"
    },
    "seed": {
      "title": "Random Seed",
      "type": "integer",
      "description": "Set a seed for reproducible results. Same seed = same output.",
      "editor": "number",
      "nullable": true
    }
  },
  "required": ["mode", "symbol", "timeframe", "dataPoints"]
}
